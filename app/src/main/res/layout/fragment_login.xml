<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ss_neumorphic_background"
    tools:context=".Fragments.LoginFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@color/darkcyan"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/logintv"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textSize="21.1dp"
        android:id="@+id/loginemailedit"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/logintv"
        app:ss_neumorphic_shapeType="basin"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:focusableInTouchMode="true"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.simformsolutions.ssneumorphic.component.SSNeumorphicEditText
        android:layout_width="305.6dp"
        android:layout_height="78.2dp"
        android:gravity="center"
        android:hint="password"
        android:password="true"
        app:passwordToggleEnabled="true"
        android:textSize="21.1dp"
        android:inputType="textPassword"
        android:id="@+id/loginpasswordedit"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/darkcyan"
        app:layout_constraintTop_toBottomOf="@id/loginemailedit"
        app:ss_neumorphic_shapeType="basin"
        android:focusableInTouchMode="true"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="@color/orangered"
        app:layout_constraintTop_toBottomOf="@id/loginpasswordedit"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/loginbtn"
        android:orientation="vertical">
        <TextView
            android:id="@+id/logintext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Login"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="22dp"
            android:visibility="visible"
            android:layout_gravity="center"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/loginprogress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:progressTint="@color/white"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/white"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>